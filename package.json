{
  "name": "pick-pulse",
  "displayName": "Pick pulse",
  "version": "0.0.1",
  "description": "Pick Pulse is the leading Draft Board builder for ESPN Drafts",
  "author": "Tristen Dillon, Trever Dillon",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.86.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "background": {
      "service_worker": "background.ts"
    },
    "permissions": [
      "scripting",
      "webRequest"
    ],
    "host_permissions": [
      "https://fantasy.espn.com/football/*",
      "https://lm-api-reads.fantasy.espn.com/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://fantasy.espn.com/football/*"
        ],
        "js": [
          "/contentScript.js"
        ],
        "run_at": "document_start"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "dataReader.js",
          "contentScript.js"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}
